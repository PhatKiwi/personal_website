<div class="blog-hero">
  <div class="container">
    <h1>My Blog</h1>
    <p>Thoughts, insights, and stories from my journey in tech</p>
    <div class="hero-nav">
      <a href="/" class="btn btn-home">‚Üê Back to Home</a>
      <% if user_signed_in? && current_user.admin? %>
        <a href="/blog/new" class="btn btn-admin">+ Create New Post</a>
      <% end %>
    </div>
  </div>
</div>

<div class="blog-content">
  <div class="container">
    <div class="blog-posts">
      <% if @blog_posts.any? %>
        <% @blog_posts.each do |post| %>
          <article class="blog-post">
            <h2><%= post.title %></h2>
            <p class="post-meta">Published <%= post.created_at.strftime("%B %d, %Y") %> by <%= post.user.email %></p>
            <p><%= truncate(post.content, length: 200, separator: ' ') %></p>
            <div class="post-actions">
              <a href="<%= blog_post_path(post) %>" class="read-more">Read More</a>
            </div>
          </article>
        <% end %>
      <% end %>
    </div>
  </div>
</div>